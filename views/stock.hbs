<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Stock Page</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Josh Taylor">
		<meta name="viewport" content= "width=device-width, initial-scale=1.0">
		<link href="/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="/main.js"></script>
	</head>
	<body>
		<header>
			<h1>Stock Levels</h1>
			{{#if authorised}}
				<a href="/logout">Log out</a>
			{{else}}
				{{#if admin}}
                    <a href="/add_stock">Add Stock</a>
					<a href="/logout">Log out</a>
				{{else}}
					<a href="/login">Log in</a>
				{{/if}}
			{{/if}}
		</header>
	<main style="max-width: 100%; height: 100%; flex-direction: row; display: flex; flex-wrap: wrap;">
		{{#each sub_data}}
			<section class="stock_level">
				<p>ISBN: {{this.isbn}}</p>
				<p>NAME: {{this.book_title}}</p>
				<p>QUANTITY: {{this.quantity}}</p>
				<figure><img src="{{this.filepath}}" alt="Book Cover"/></figure>
			</section>
		{{/each}}
	</main>
	</body>
</html>